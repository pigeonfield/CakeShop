@model CakeShop.Models.Cake

<h2>@Model.Name</h2>


<div class="thumbnail">
     <img src="@Model.ImageUrl" alt="@Model.Name" />

     <div class="caption-full">
         <h3 class="pull-right">@Model.Price</h3>
         <h3><a href="#">@Model.Name</a></h3>

         <h4>@Model.ShortDescription</h4>
         <h4>@Model.LongDescription</h4>
     </div>
        
</div>
}

